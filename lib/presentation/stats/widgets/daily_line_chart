import 'package:fl_chart/fl_chart.dart';
import 'package:flutter/material.dart';
import 'package:tasklyai/models/statistics_range_model.dart';

class DailyLineChart extends StatelessWidget {
  final List<DailyStat> data;

  const DailyLineChart(this.data, {super.key});

  @override
  Widget build(BuildContext context) {
    return SizedBox(
      height: 260,
      child: LineChart(
        LineChartData(
          gridData: FlGridData(show: false),
          titlesData: FlTitlesData(
            bottomTitles: AxisTitles(
              sideTitles: SideTitles(
                showTitles: true,
                interval: 2,
                getTitlesWidget: (value, meta) {
                  final index = value.toInt();
                  if (index < 0 || index >= data.length) {
                    return const SizedBox();
                  }
                  return Text(
                    data[index].dayOfWeek,
                    style: const TextStyle(fontSize: 10),
                  );
                },
              ),
            ),
            leftTitles: AxisTitles(
              sideTitles: SideTitles(showTitles: true, reservedSize: 30),
            ),
            rightTitles: AxisTitles(sideTitles: SideTitles(showTitles: false)),
            topTitles: AxisTitles(sideTitles: SideTitles(showTitles: false)),
          ),
          lineBarsData: [
            _line(
              data.map((e) => e.created).toList(),
              Colors.blue,
            ),
            _line(
              data.map((e) => e.completed).toList(),
              Colors.green,
            ),
          ],
        ),
      ),
    );
  }

  LineChartBarData _line(List<int> values, Color color) {
    return LineChartBarData(
      isCurved: true,
      color: color,
      barWidth: 3,
      dotData: FlDotData(show: false),
      spots: values
          .asMap()
          .entries
          .map((e) => FlSpot(e.key.toDouble(), e.value.toDouble()))
          .toList(),
    );
  }
}
